int main(void) {
	int n;
	cout << "Enter n: ";
	cin >> n;
	int** A;
	init(n, A);
	//search(n, A);
	for (int i = 0; i < n; i++) {
		for (int k = 0; k < n; k++) {
			cout << A[i][k] << " ";
		}
		cout << endl;
	}
	cout << endl;
	return 1;
}
