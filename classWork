#include <iostream>

using namespace std;

void init(int n, int** &A);

void init(int n, int** &A) {
	A = new int*;
	int ch = 0;
	int* ptr = new int[n];
	for (int j = 0; j < n; j++) {
		for (int i = 0; i < n; i++) {
			ptr[i] = i;
			//cout << ch;
		}
		A[j] = new int;
		A[j] = ptr;
	}
	for (int i = 0; i < n; i++) {
		for (int k = 0; k < n; k++) {
			cout << A[i][k] << " ";
		}
		cout << endl;
	}
	cout << endl;
	cout << endl;
}

